<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.luhuiguo.speech</groupId>
  <artifactId>speech</artifactId>
  <name>Speech</name>
  <version>0.0.1-SNAPSHOT</version>
  <url>http://www.gildata.com</url>
  <issueManagement>
    <system>github</system>
    <url>https://github.com/luhuiguo/speech/issues</url>
  </issueManagement>
  <developers>
    <developer>
      <id>lhg</id>
      <name>Lu,Huiguo</name>
      <email>luhuiguo@gmail.com</email>
      <url>http://luhuiguo.github.io/</url>
      <timezone>+8</timezone>
    </developer>
  </developers>
  <scm>
    <connection>scm:git:https://github.com/luhuiguo/speech.git</connection>
    <developerConnection>scm:git:https://github.com/luhuiguo/speech.git</developerConnection>
    <url>https://github.com/luhuiguo/speech</url>
  </scm>
  <build>
    <resources>
      <resource>
        <targetPath>lib/</targetPath>
        <directory>lib/</directory>
        <includes>
          <include>**/Msc.jar</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <encoding>${project.build.sourceEncoding}</encoding>
          <source>${maven.compiler.source}</source>
          <target>${maven.compiler.target}</target>
          <optimize>true</optimize>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>com.luhuiguo.speech.Synthesizer</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.luhuiguo.speech.Synthesizer</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <java.library.path>/usr/local/lib</java.library.path>
    <slf4j.version>1.7.7</slf4j.version>
    <junit.version>4.11</junit.version>
    <maven.compiler.target>1.6</maven.compiler.target>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <logback.version>1.1.2</logback.version>
    <jna.version>4.1.0</jna.version>
    <msc.version>1.012</msc.version>
    <commons.io.version>2.4</commons.io.version>
    <project_charset>UTF-8</project_charset>
    <maven.compiler.source>1.6</maven.compiler.source>
  </properties>
</project>

